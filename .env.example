# LangChain/LangSmith Configuration
LANGCHAIN_API_KEY=""
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT="mcp-auth-demo"

# Secret Store Configuration
SECRET_STORE_URL=https://your-secret-store.example.com
SECRET_STORE_TOKEN=your_secret_store_auth_token

# MCP Server URLs
GITHUB_MCP_URL=https://api.githubcopilot.com/mcp/

# External Service APIs (for token validation)
GITHUB_API_URL=https://api.github.com

# GitHub Authentication Tokens
# For real GitHub API calls (get from https://github.com/settings/tokens)
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_real_github_token_here

# Demo/Test Tokens (used for demonstration)
DEMO_GITHUB_TOKEN=ghp_demo_token_for_testing
DEMO_API_KEY=demo_api_key_123


# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_for_token_signing
ENCRYPTION_KEY=your_encryption_key_for_secrets

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
TOKEN_CACHE_TTL=3600
AUTH_TIMEOUT_SECONDS=5
MCP_REQUEST_TIMEOUT=30

# Development/Testing
MOCK_AUTHENTICATION=false
MOCK_MCP_SERVERS=false
TEST_USER_TOKENS=false