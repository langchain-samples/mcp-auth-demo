# LangChain/LangSmith Configuration
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=mcp-auth-demo

# Secret Store Configuration
SECRET_STORE_URL=https://your-secret-store.example.com
SECRET_STORE_TOKEN=your_secret_store_auth_token

# MCP Server URLs
GITHUB_MCP_URL=https://github-mcp-server.example.com/mcp
JIRA_MCP_URL=https://jira-mcp-server.example.com/mcp
SLACK_MCP_URL=https://slack-mcp-server.example.com/mcp
CONFLUENCE_MCP_URL=https://confluence-mcp-server.example.com/mcp

# External Service APIs (for token validation)
GITHUB_API_URL=https://api.github.com
JIRA_API_URL=https://api.atlassian.com
SLACK_API_URL=https://slack.com/api

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_for_token_signing
ENCRYPTION_KEY=your_encryption_key_for_secrets

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
TOKEN_CACHE_TTL=3600
AUTH_TIMEOUT_SECONDS=5
MCP_REQUEST_TIMEOUT=30

# Development/Testing
MOCK_AUTHENTICATION=false
MOCK_MCP_SERVERS=false
TEST_USER_TOKENS=false